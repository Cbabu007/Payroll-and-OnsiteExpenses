<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ABC Construction</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .main-container {
            display: flex;
            height: 100vh;
            flex-direction: row;
            border-bottom: 40px solid #0990F0;
            border-right: 20px solid #0990F0;
            overflow: hidden;
        }

        .sidebar {
            width: 260px;
            background-color: #0990F0;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
            max-height: 100vh;
            scrollbar-width: none; 
        }

            .sidebar::-webkit-scrollbar {
                display: none; 
            }

            .sidebar img {
                width: 140px;
                height: 140px;
                border-radius: 50%;
                border: 5px solid white;
                margin-bottom: 20px;
            }

            .sidebar button, .sidebar form {
                width: 100%;
                padding: 10px 0;
                border: none;
                background-color: transparent;
                color: white;
                font-weight: bold;
                text-align: center;
            }

                .sidebar button:hover {
                    background-color: #007acc;
                }

        .content-area {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            border-left: 5px solid #0990F0;
            max-height: 100vh;
            overflow: hidden;
        }

        .header {
            height: 140px;
            background-color: #0990F0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
            font-weight: bold;
            gap: 20px;
            position: relative;
            flex-shrink: 0;
        }

            .header img {
                width: 100px;
                height: 100px;
                border-radius: 50%;
                border: 5px solid white;
            }

        .menu-toggle {
            display: none;
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 24px;
            background: none;
            border: none;
            color: white;
        }

        .content {
            flex-grow: 1;
            overflow-y: auto;
            background-color: white;
            padding: 30px;
        }

        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                left: 0;
                top: 0;
                height: 100%;
                transform: translateX(-100%);
                z-index: 1000;
            }

                .sidebar.open {
                    transform: translateX(0);
                }

            .menu-toggle {
                display: block;
            }

            .main-container {
                flex-direction: column;
            }

            .content-area {
                border-left: none;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <img src="@Url.Content("~/images/ABCLogo.jpg")" alt="Logo" />
            <form method="get" asp-controller="Admin" asp-action="Dashboard"><button type="submit">Dashboard</button></form>
            <form method="get" asp-controller="Admin" asp-action="EmployeeManagement"><button type="submit">Employee Management</button></form>
            <form method="get" asp-controller="Admin" asp-action="ProjectManagement"><button type="submit">Project Management</button></form>
            <form method="get" asp-controller="Admin" asp-action="PayrollManagement"><button type="submit">Payroll Management</button></form>
            <form method="get" asp-controller="Admin" asp-action="ExpensesClaimManagement"><button type="submit">Expenses Claim Management</button></form>
            <form method="get" asp-controller="Admin" asp-action="Reports"><button type="submit">Reports</button></form>
            <form method="get" asp-controller="Admin" asp-action="EmployeeSalaryDetailsPage"><button type="submit">Employee Salary Details</button></form>
            <form method="get" asp-controller="Home" asp-action="Index"><button type="submit">Logout</button></form>
        </div>

        <!-- Main content -->
        <div class="content-area">
            <div class="header">
                <button class="menu-toggle" onclick="toggleMenu()">☰</button>
               
                <span>ABC Construction</span>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script>
        function toggleMenu() {
            const sidebar = document.getElementById("sidebar");
            sidebar.classList.toggle("open");
        }
    </script>

</body>
@RenderSection("Scripts", required: false)

</html>
